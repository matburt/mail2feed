# Development Dockerfile with hot reloading
FROM rust:1.89-slim-bullseye

# Install build dependencies and development tools
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    libpq-dev \
    libsqlite3-dev \
    && rm -rf /var/lib/apt/lists/*

# Install cargo-watch for hot reloading
RUN cargo install cargo-watch

# Create app directory
WORKDIR /app

# Create app user for development
RUN useradd -m -u 1001 appuser && chown appuser:appuser /app
USER appuser

# Expose port
EXPOSE 3001

# Set environment variables
ENV RUST_LOG=debug

# Default command for development (overridden by docker-compose)
CMD ["cargo", "run"]